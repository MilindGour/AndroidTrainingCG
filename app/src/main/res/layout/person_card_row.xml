<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TableLayout
            android:id="@+id/cardTable"
            android:layout_width="match_parent"
            android:background="@color/colorFemale"
            android:paddingVertical="10dp"
            android:layout_height="wrap_content">
        <TableRow>
            <CheckBox
                    android:text=""
                    android:layout_marginHorizontal="3dp"
                    android:id="@+id/personCheckbox"
                    android:layout_column="0"
                    android:layout_gravity="center" />
            <LinearLayout android:layout_column="1" android:orientation="vertical">
                 <TextView
                         android:id="@+id/personName"
                         android:text="Person Name"
                         android:textSize="@dimen/person_card_name_size"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />
                <TextView
                         android:id="@+id/personEmail"
                         android:text="person@email.com"
                         android:textSize="@dimen/person_card_email_size"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</androidx.cardview.widget.CardView>